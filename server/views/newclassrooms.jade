extends layout

block head
  != css("newclassrooms")

block content
  .container

    form.form-horizontal
      .form-group
        label.col-lg-2.control-label
          | &nbsp;
        .col-lg-10
          h5 New Classrooms
      .form-group
        label.col-lg-2.control-label Skill Number
        .col-lg-10
          input.form-control.col-lg-8#skillNumber
      .form-group
        label.col-lg-2.control-label Family
        .col-lg-10
          input.form-control.col-lg-8#family
      .form-group
        label.col-lg-2.control-label Master Question
        .col-lg-10
          input.form-control.col-lg-8#masterQuestion
      .form-group
        label.col-lg-2.control-label &nbsp;
        .col-lg-8
          button#saveButton.btn.btn-lg Save

